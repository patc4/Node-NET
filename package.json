{
  "name": "Node-NET",
  "version": "1.0.0",
  "description": "A network simulation game that is in developement.",
  "scripts": {
    "build:dev": "tsc",
    "copy-files": "copyfiles -u 1 src/frontend/*.html src/frontend/*.css src/frontend/*.js dist/",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "build:prod": "electron-packager . Node-Net --platform=win32 --arch=x64",
    "docs:build": "documentation build src/** -f html -o docs",
    "start": "npm run build:dev && npm run copy-files && electron ./dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patc4/Node-NET.git"
  },
  "author": "patc4, Mangiang",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/patc4/Node-NET/issues"
  },
  "homepage": "https://github.com/patc4/Node-NET#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-flow": "^7.7.4",
    "copyfiles": "^2.1.1",
    "documentation": "^12.1.4",
    "electron": "^7.1.7",
    "electron-packager": "^14.1.1",
    "rete": "^1.4.2",
    "rete-connection-plugin": "^0.9.0",
    "rete-vue-render-plugin": "^0.5.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "regenerator-runtime": "^0.13.3",
    "rete-area-plugin": "^0.2.1",
    "rete-comment-plugin": "^0.6.1",
    "rete-connection-mastery-plugin": "^0.2.3",
    "rete-context-menu-plugin": "^0.5.2",
    "rete-history-plugin": "^0.2.1",
    "socket.io": "^2.3.0"
  }
}
